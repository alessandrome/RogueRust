{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "env_type": {
        "type": "string",
        "enum": ["open_world", "dungeon"]
      },
      "attributes": {"type": "object"}
    },
    "required": ["id", "env_type", "attributes"],

    "if": {
      "properties": { "env_type": { "enum": ["open_world"] } }
    },
    "then": {
      "properties": {
        "attributes": {
          "properties": {
            "tiles": {"type": "array", "items": {"type": "string"} }
          },
          "required": ["tiles"]
        }
      }
    },
    "else": {
      "if": {
        "properties": { "env_type": { "enum": ["dungeon"] } }
      },
      "then": {
        "properties": {
          "attributes": {
            "properties": {
              "max_rooms": {"type": "integer"},
              "rooms": {"type": "array"}
            },
            "required": ["max_rooms", "rooms"]
          }
        }
      }
    }
  }
}
